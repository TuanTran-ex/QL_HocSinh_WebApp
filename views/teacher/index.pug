extends ../layout

block content
    .container.contents-container
        h1 Quản lý danh sách Teacher
        a.use-link(href="/teachers/create") Create
        form.search-box(action= "/teachers/search", method="GET")
            input.form-control(name="q", type="text", value= search_key)
            button.btn.btn-primary Search
        h2.mt-5 Danh sách Teacher
        table.table
            thead  
                th(scope="col") Name
                th(scope="col") Nơi ở
                th(scope="col") username
                th(scope="col") Password (tạm thời)
                th(scope="col", class="text-center") Action
            tbody
                each item in teacher_list
                    tr
                        td= item.name
                        td= item.address
                        td= item.username
                        td= item.password
                        td(class="text-center")
                            a(href="/teachers/" + item._id, class="view-btn btn btn-primary") View

    