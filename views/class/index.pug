extends ../layout

block content
    .container.contents-container
        h1 Quản lý danh sách Class
        a.use-link(href="/class/create") Create
        form.search-box(action= "/class/search", method="GET")
            input.form-control(name="q", type="text", value= search_key)
            button.btn.btn-primary Search
        h2.mt-5 Danh sách Class
        table.table
            thead  
                th(scope="col") Name
                th(scope="col") SĐT
                th(scope="col", class="text-center") Action
            tbody
                each item in class_list
                    tr 
                        td= item.name
                        td= item.phone_number
                        td(class="text-center")
                            a(href="/class/" + item._id, class="view-btn btn btn-primary") View

    